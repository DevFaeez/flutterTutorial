30. flexible and Expanded

CARA 1: hanya ada satu flexible

import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: HomePage(),
    );
  }
}

class HomePage extends StatelessWidget {

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text("Flexible And Expanded"),
      ),
      body: Row(
        // mainAxisAlignment: MainAxisAlignment.center,
        children: [
          Container(
            child: Text("Box 1 - sangat pajng"),
            //width bergantung pada length text
            color: Colors.red,
            height: 100,
          ),
          Container(
            child: Text("Box 2 - panjangg"),
            color: Colors.blue,
            height: 100,
          ),
          Flexible(
            // fit: FlexFit.loose, //The child can be at most as large as the available space (but is allowed to be smaller)
            fit: FlexFit.tight, //The child is forced to fill the available space.
            child: Container(
              child: Text("Box 3"),
              color: Colors.amber,
              height: 100,
            ),
          ),
        ],
      ),
    );
  }
}

//cara 2: lebih satu flexible

* flexible akan bahgia sama rata antara flexible

import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: HomePage(),
    );
  }
}

class HomePage extends StatelessWidget {

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text("Flexible And Expanded"),
      ),
      body: Row(
        // mainAxisAlignment: MainAxisAlignment.center,
        children: [
          Container(
            child: Text("Box 1 - sangat pajng"),
            //width bergantung pada length text
            color: Colors.red,
            height: 100,
          ),
          Flexible(
            fit: FlexFit.tight, //jika ada width dalam container, maka width tersebut tidak akan berguna
            child: Container(
              child: Text("Box 2 - panjangg"),
              color: Colors.blue,
              height: 100,
            ),
          ),
          Flexible(
            // fit: FlexFit.loose, //The child can be at most as large as the available space (but is allowed to be smaller)
            fit: FlexFit.tight, //The child is forced to fill the available space.
            child: Container(
              child: Text("Box 3"),
              color: Colors.amber,
              height: 100,
            ),
          ),
        ],
      ),
    );
  }
}


//CARA 3:  GUNA FLEX

import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: HomePage(),
    );
  }
}

class HomePage extends StatelessWidget {

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text("Flexible And Expanded"),
      ),
      body: Row(
        // mainAxisAlignment: MainAxisAlignment.center,
        children: [
          Flexible(
            flex: 1,
            child: Container(
              child: Text("Box 1 - sangat pajng"),
              //width bergantung pada length text
              color: Colors.red,
              height: 100,
            ),
          ),
          Flexible(
            flex: 1,
            child: Container(
              child: Text("Box 2 - panjangg"),
              color: Colors.blue,
              height: 100,
            ),
          ),
          Flexible(
            flex: 1,  //flex boleh gunakan degna width 
            child: Container(
              child: Text("Box 3"),
              width: 100,
              color: Colors.amber,
              height: 100,
            ),
          ),
        ],
      ),
    );
  }
}

//cara 4: guna Expanded iatu flexible dengan fit: Flexfit.tight

import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: HomePage(),
    );
  }
}

class HomePage extends StatelessWidget {

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text("Flexible And Expanded"),
      ),
      body: Row(
        // mainAxisAlignment: MainAxisAlignment.center,
        children: [
          Flexible(
            fit: FlexFit.tight,
            child: Container(
              child: Text("Box 1 - sangat pajng"),
              //width bergantung pada length text
              color: Colors.red,
              height: 100,
            ),
          ),
          Flexible(
            fit: FlexFit.tight,
            child: Container(
              child: Text("Box 2 - panjangg"),
              color: Colors.blue,
              height: 100,
            ),
          ),
          Expanded(
            child: Container(
              child: Text("Box 3"),
              width: 100,
              color: Colors.amber,
              height: 100,
            ),
          ),
        ],
      ),
    );
  }
}


22. Navigation

* perpindahan page1 ke page2
* Guna konsep stack
* tidak perlu stateful sebab navigation

//cara 1: guna push sahaja, tapi meyebabkan bayak layer(makan banyak memori)

//main.dart

import 'package:flutter/material.dart';
import 'package:flutter_application_1/page_satu.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: PageSatu(),
    );
  }
}

//page_satu.dart

import 'package:flutter/material.dart';
import 'package:flutter_application_1/page_dua.dart';

class PageSatu extends StatelessWidget {

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text("PAGE SATU"),
      ),
      body: Center(
        child: Text(
          "INI PAGE SATU",
          style: TextStyle(fontSize: 36),
          ),
      ),
      floatingActionButton: FloatingActionButton(
        onPressed: () {
          Navigator.of(context).push(
            MaterialPageRoute(
              builder: (context) {
                return PageDua();
            },
            ),
            );
        },
        child: Icon(Icons.keyboard_arrow_right, size: 35,),
        ),
        floatingActionButtonLocation: FloatingActionButtonLocation.centerFloat,
    );
  }
}

//page_dua.dart


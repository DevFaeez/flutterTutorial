//cara 3:  jika terlalu banyak page, make boleh gunaa cara ini

//main.dart

import 'package:flutter/material.dart';
import 'package:flutter_application_1/GalleryPage.dart';
import 'package:flutter_application_1/HomePage.dart';
import 'package:flutter_application_1/PhotoPage.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: HomePage(),
      initialRoute: '/homepage', //set page awal
      routes: {
        HomePage.nameRoutes: (context) => HomePage(),  //  /homepage /gallery /photo: untuk declare routes atau navigator page yang ada 
        GalleryPage.namesRoutes: (context) => GalleryPage(),
        PhotoPage.namesRoutes: (context) => PhotoPage(), //cara 1
      },
    );
  }
}

//HomePage.dart


import 'package:flutter/material.dart';
import 'package:flutter_application_1/GalleryPage.dart';

class HomePage extends StatelessWidget {
  static const nameRoutes = "/homepage";

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text("HOME PAGE"),
      ),
      body: Center(
        child: Text(
          "HOME PAGE", 
          style: TextStyle(fontSize: 50, fontWeight: FontWeight.bold),
        ),
      ),
      floatingActionButton: FloatingActionButton(
        child: Icon(Icons.skip_next_sharp, size: 37,),
        onPressed: () {
          Navigator.of(context).pushNamed(GalleryPage.namesRoutes);
        }),
    );
  }
}


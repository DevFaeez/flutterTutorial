24. Drawer

//main.dart

import 'package:flutter/material.dart';
import 'package:flutter_application_1/PageDebug.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: HomePage(),
    );
  }
}

class HomePage extends StatelessWidget {

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text("Drawer"),
        centerTitle: true,
        // leading: ,  //untuk buat drawer, maka tidak perlukan leading
      ),
      drawer: Drawer( //untuk guna, boleh klik atau slide kiri ke kanan
        child: Column(
          children: [
            Container(
              padding: EdgeInsets.all(20),
              alignment: Alignment.bottomCenter,
              width: double.infinity, //max width can fill
              color: Colors.red,
              height: 150,
              child: Text("SOMETHING HERE", style: TextStyle(color: Colors.white),),
            ),
            SizedBox(
              height: 10,
            ),
            ListTile(
              onTap: () {
                Navigator.of(context).pushReplacement(
                  MaterialPageRoute(builder: (context) {
                    return PageDebug();
                  },)
                );
              },  //untuk boleh klik dan add function
              // contentPadding: EdgeInsets.all(10),
              leading: Icon(Icons.person, size: 33, color: Colors.black,),
              title: Text("Profile", style: TextStyle(fontSize: 20, color: Colors.black)),
            ),
            ListTile(
              // contentPadding: EdgeInsets.all(10),
              leading: Icon(Icons.settings, size: 33, color: Colors.black,),
              title: Text("Settins", style: TextStyle(fontSize: 20, color: Colors.black)),
            ),
          ],
        ),
      ),  
      body: Center(
        child: Text("SOMETHING HERE"),
        ),
    );
  }
}


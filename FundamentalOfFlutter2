      appBar: AppBar(
        title: Text("Flexible And Expanded"),
      ),
      body: Row(
        // mainAxisAlignment: MainAxisAlignment.center,
        children: [
          Flexible(
            flex: 5,  //flex berguna untuk pembahaiagn   //size yang akan jadi 5/7
            child: Container(
              //width bergantung pada length text
              color: Colors.red,
              height: 100,
            ),
          ),
          Flexible(
            flex: 1, //size yg ni akan menjadi 1/7
            child: Container(
              color: Colors.blue,
              height: 100,
            ),
          ),
          Flexible(
            flex: 1,
            child: Container(
              color: Colors.amber,
              height: 100,
            ),
          ),
        ],
      ),
    );
  }
}


29. Media Query

* mendapatkan size-size px device 


// cara 1: untuk potrait sahaja 

import 'package:flutter/material.dart';
import 'package:flutter/services.dart';

void main() {
  // //gunakan ini untuk membuat potrait sahaja
  // WidgetsFlutterBinding.ensureInitialized();
  // SystemChrome.setPreferredOrientations([
  //   // DeviceOrientation.portraitUp,  //hanya boleh potrait up sahaja
  //   // DeviceOrientation.portraitDown, //hanya boleh potrair down sahaja
  //   DeviceOrientation.landscapeRight,
  // ]);

  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      home: HomePage(),
    );
  }
}

class HomePage extends StatelessWidget {

  @override
  Widget build(BuildContext context) {

    final mediaQueryHeight = MediaQuery.of(context).size.height;  //size dari paling atas dan paling bawah
    final mediaQueryWidth = MediaQuery.of(context).size.width;
    //perdu di assign dulu
    // 1.0 bererti 100% termasuk appBAr, jadi total size untuk body kurang 100
    //jadi untuk body tidak boleh gunakan 100, maksudnya untuk elekkkan kesalahan perlu tolak dahulu sheigth app bar


    final myAppBar = AppBar(
        title: Text("Media Query"),
      );


      //untuk dapatkan height body sahaja(tidak termasuk app bar dan bagian battery percentage)
      //kena buat alhkan appBar ke bahagian atas dan untuk cari size tersbut dengan car ini

      final myBodyHeight = mediaQueryHeight - myAppBar.preferredSize.height - MediaQuery.of(context).padding.top;
      // .padding.top untuk bahagian paling atss telefon seperti jam dan batteri


    return Scaffold(
      appBar: myAppBar,
      body: Center(
        child: Column(
          children: [
            Container(
              width: mediaQueryWidth,
              height: myBodyHeight * 0.3, //30 dari size scrreen
              color: Colors.amber,
            ),
            Container(
              // height: MediaQuery.of(context).size.height, //akan terjadi overflow jika buat begini, lebih baik buat dekat atas
              height: myBodyHeight * 0.7,   // 0.7 bermaksud 70 dari full scrren
              color: Colors.cyan,
              child: ListView.builder(
                itemCount: 50,
                itemBuilder: (context, index) {
                  return ListTile(
                    leading: CircleAvatar(),
                    title: Text("FAISSS $index"),
                  );
                }
                ),
            ),
          ],
        ),
      )
    );
  }
}


//cara 2: untuk landscape dan poitrai


import 'dart:math';

import 'package:flutter/material.dart';
import 'package:flutter/services.dart';

void main() {
  // //gunakan ini untuk membuat potrait sahaja
  // WidgetsFlutterBinding.ensureInitialized();
  // SystemChrome.setPreferredOrientations([
  //   // DeviceOrientation.portraitUp,  //hanya boleh potrait up sahaja
  //   // DeviceOrientation.portraitDown, //hanya boleh potrair down sahaja
  //   DeviceOrientation.landscapeRight,
  // ]);

  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      home: HomePage(),
    );
  }
}

class HomePage extends StatelessWidget {

  @override
  Widget build(BuildContext context) {

    final mediaQueryHeight = MediaQuery.of(context).size.height;  //size dari paling atas dan paling bawah
    final mediaQueryWidth = MediaQuery.of(context).size.width;
    //perdu di assign dulu
    // 1.0 bererti 100% termasuk appBAr, jadi total size untuk body kurang 100
    //jadi untuk body tidak boleh gunakan 100, maksudnya untuk elekkkan kesalahan perlu tolak dahulu sheigth app bar


    final myAppBar = AppBar(
        title: Text("Media Query"),
      );


      //untuk dapatkan height body sahaja(tidak termasuk app bar dan bagian battery percentage)
      //kena buat alhkan appBar ke bahagian atas dan untuk cari size tersbut dengan car ini

      final myBodyHeight = mediaQueryHeight - myAppBar.preferredSize.height - MediaQuery.of(context).padding.top;
      // .padding.top untuk bahagian paling atss telefon seperti jam dan batteri

      //kita perlu gunakan media Query oriantation sebab ketika di rotek nanti gambr akan kekal pada size yang sesuai
      //maksudnya size gambar atau apa apa akan berubah unutk mejadi kualiti

      final bool isLandScapre = MediaQuery.of(context).orientation == Orientation.landscape;

    return Scaffold(
      appBar: myAppBar,
      body: Center(
        child: isLandScapre ? Column( //jika bool isLandcape true(maksudnya landsacpre), akan dispplay code dibawah
          children: [
            Container(
              width: mediaQueryWidth,
              height: myBodyHeight * 0.5, //30 dari size scrreen
              color: Colors.amber,
            ),
            Container(
              // height: MediaQuery.of(context).size.height, //akan terjadi overflow jika buat begini, lebih baik buat dekat atas
              height: myBodyHeight * 0.5,   // 0.7 bermaksud 70 dari full scrren
              color: Colors.cyan,
              child: ListView.builder(
                itemCount: 50,
                itemBuilder: (context, index) {
                  return ListTile(
                    leading: CircleAvatar(),
                    title: Text("FAISSS $index"),
                  );
                }
                ),
            ),
          ],
        )
        : Column(  //jika bool isLandcape false(maksudnya potrait), akan dispplay code dibawah
          children: [
            Container(
              width: mediaQueryWidth,
              height: myBodyHeight * 0.3, //30 dari size scrreen
              color: Colors.amber,
            ),
            Container(
              // height: MediaQuery.of(context).size.height, //akan terjadi overflow jika buat begini, lebih baik buat dekat atas
              height: myBodyHeight * 0.7,   // 0.7 bermaksud 70 dari full scrren
              color: const Color.fromARGB(255, 255, 255, 255),
              child: GridView.builder(
                gridDelegate: SliverGridDelegateWithFixedCrossAxisCount(
                  crossAxisCount: 2, 
                  mainAxisSpacing: 10, 
                  crossAxisSpacing: 10),
                itemCount: 50,
                itemBuilder: (context, index) {
                  return GridTile(
                    child: Container(
                      color: Color.fromARGB(255, Random().nextInt(256), Random().nextInt(100), 1),
                    ),
                  );
                }
                ),
            ),
          ],
        ),
      )
    );
  }
}


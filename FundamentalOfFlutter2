//main.dart

import 'package:flutter/material.dart';
import 'package:flutter_application_1/HomePage.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  const MyApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: HomePage(),
    );
  }
}



//homepage.dart

import 'dart:math';

import 'package:faker/faker.dart';
import 'package:flutter/material.dart';
import 'package:flutter_application_1/models/product.dart';

class HomePage extends StatelessWidget {

  Faker faker = Faker();

  @override
  Widget build(BuildContext context) {
    List<Product> dummyData = List.generate(100, (index) {
      return Product(
        faker.food.restaurant(),
        'https://picsum.photos/id/${index + 1}/200/200/',
        50.0 + Random().nextDouble(),
        faker.lorem.sentence()
      );
    });
    return Scaffold(
      appBar: AppBar(
        title: Text("Model Page"),
      ),
      body: GridView.builder(
        padding: EdgeInsets.all(20),
        gridDelegate: SliverGridDelegateWithFixedCrossAxisCount(
          crossAxisCount: 2,
          mainAxisSpacing: 15,
          crossAxisSpacing: 15
          ),
        itemBuilder: (context, index) {
          return GridTile(
            child: Image.network(dummyData[index].imagesURL),
            footer: Container(
              color: Colors.blue,
              alignment: Alignment.centerRight,
              
              child: Column(
                mainAxisAlignment: MainAxisAlignment.center,
                crossAxisAlignment: CrossAxisAlignment.start,
                children: [
                  Text(
                    dummyData[index].productName, 
                    maxLines: 1,
                    style: TextStyle(
                      color: Colors.white,
                      fontWeight: FontWeight.bold
                      ),
                      ),
                  Text("RM ${dummyData[index].productPrice}"),
                  Text(dummyData[index].desription, maxLines: 2,),
                ],
              ),
            ),
            );
        },
        itemCount: dummyData.length,
        ),
    );
  }
}

//models/product.dart //folder models in lib

import 'package:flutter/material.dart';

class Product {

@required String productName;
@required String imagesURL;
@required double productPrice;
@required String desription;

Product(this.productName, this.imagesURL, this.productPrice, this.desription);

}
























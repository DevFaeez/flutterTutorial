25. Switch

* seperti suis buka tutup
* melibatkan 2 componenet
  track: line
  thumb: biasanya bulan

//cara 1: default size

import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: MyHome(),
    );
  }
}

class MyHome extends StatefulWidget {
  const MyHome({super.key});

  @override
  State<MyHome> createState() => _MyHomeState();
}

class _MyHomeState extends State<MyHome> {

  bool statusSwitch = false;

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text("My Switch"),
      ),
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            Switch( //untuk switch wajib ada value dan onChanged
            //switch.adaptive : untuk switch design berbeza dan hanya untuk ip
            activeColor: Colors.yellow,  //set color ketika on, boleh guna untuk swithc edaptive
            activeTrackColor: Colors.red,
            inactiveThumbColor: Colors.red,
            inactiveTrackColor: Colors.yellow,  //set color ketika OFF, tidak boleh guna untuk swicth adaptive

            activeThumbImage: AssetImage("images/true.webp"), //add images for thumb, adaptive tidak boleh gunakan ini
            inactiveThumbImage: AssetImage("images/false.webp"),

            
              value: statusSwitch,
              onChanged: ((value) {
                setState(() {
                statusSwitch = !statusSwitch;
                });
                print(statusSwitch);
              }),
            ),
              // if(statusSwitch == true) 
              //     Text("switch off", 
              //     style: TextStyle(
              //       fontSize: 22,
              //     ),)
              // else 
              //   Text("switch off", 
              //     style: TextStyle(
              //       fontSize: 22,
              //     ),),         //cara 1
              Text(
                (statusSwitch == true) ? "Switch On" : "Switch Off",
                style: TextStyle(
                  fontSize: 22,
                ),
              ),
          ],
          ),
      ),
    );
  }
}

//cara 2: modif size

import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: MyHome(),
    );
  }
}

class MyHome extends StatefulWidget {
  const MyHome({super.key});

  @override
  State<MyHome> createState() => _MyHomeState();
}

class _MyHomeState extends State<MyHome> {

  bool statusSwitch = false;

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text("My Switch"),
      ),
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            Container(
              color: Colors.grey,
              height: 400,
              width: 200,
              child: Transform.scale(
                scale: 4,
                child: Switch( //untuk switch wajib ada value dan onChanged
                //switch.adaptive : untuk switch design berbeza dan hanya untuk ip
                activeColor: Colors.yellow,  //set color ketika on, boleh guna untuk swithc edaptive
                activeTrackColor: Colors.red,
                inactiveThumbColor: Colors.red,
                inactiveTrackColor: Colors.yellow,  //set color ketika OFF, tidak boleh guna untuk swicth adaptive
                          
                activeThumbImage: AssetImage("images/true.webp"), //add images for thumb, adaptive tidak boleh gunakan ini
                inactiveThumbImage: AssetImage("images/false.webp"),
                          
                
                  value: statusSwitch,
                  onChanged: ((value) {
                    setState(() {
                    statusSwitch = !statusSwitch;
                    });
                    print(statusSwitch);
                  }),
                ),
              ),
            ),
              // if(statusSwitch == true) 
              //     Text("switch off", 
              //     style: TextStyle(
              //       fontSize: 22,
              //     ),)
              // else 
              //   Text("switch off", 
              //     style: TextStyle(
              //       fontSize: 22,
              //     ),),         //cara 1
              Text(
                (statusSwitch == true) ? "Switch On" : "Switch Off",
                style: TextStyle(
                  fontSize: 22,
                ),
              ),
          ],
          ),
      ),
    );
  }
}


14. Fitur Text Field

import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        appBar: AppBar(
          title: Text("Fuction Text Field"),
        ),
        body: Center(
          child: Padding(
            padding: const EdgeInsets.all(18.0),
            child: Column(
              children: [
                TextField(
                  autocorrect: true,  //untuk corect text
                  autofocus: true, //jika ada banyak field, maka autofocus digunakan beri keutamaan pada field auto focus
                  enableSuggestions: true,
                  enableInteractiveSelection: false,  //true untuk boleh paste
                  enabled: true, //false untuk disbale text field nihh
                  obscureText: true, //buat jadi ... seperti pass
                  obscuringCharacter: "*", //tukar ... pada obsucure Text kepada benda lain
                ),
                TextField(
                  autocorrect: true,  //untuk corect text
                  keyboardType: TextInputType.number, //buat jenis keyboard
                  readOnly: true, //untuk baca sahaja
                ),
                TextField(
                  autocorrect: true,  //untuk corect text
                ),
              ],
            ),
          ),
        ),
      ),
    );
    }
}


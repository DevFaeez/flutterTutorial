//cara 6: print auto number


import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  @override
  Widget build(BuildContext context) {

    final List<Widget> myList = List.generate(
    100,
      (index) => Text(
      index.toString(),
      ),
    );
    
    final List<Color> myColor = [Colors.black, Colors.green, Colors.yellow, Colors.pink];

      return MaterialApp(
        home: Scaffold(
          appBar: AppBar(
            title: Text("LIST"),
          ),
          body: ListView(
            children: myList,
        ),
      ),
      );
  }
}

//cara 7


import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  @override
  Widget build(BuildContext context) {

    final List<Widget> myList = List.generate(
    100,
      (index) => Text(
      "${index + 1}",
      style: TextStyle(
        fontSize: 22 + double.parse(index.toString()),
      ),
      ),
    );
    
    final List<Color> myColor = [Colors.black, Colors.green, Colors.yellow, Colors.pink];

      return MaterialApp(
        home: Scaffold(
          appBar: AppBar(
            title: Text("LIST"),
          ),
          body: ListView(
            children: myList,
        ),
      ),
      );
  }
}


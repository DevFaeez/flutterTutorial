13. TabBar Widget

//cara 1


import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        appBar: AppBar(
          title: Text("My App Slide"),
          centerTitle: true,
          // bottom: PreferredSize(preferredSize: Size.fromHeight(100),
          // child: Text("Bottom"),
          // ), //cara 1
          bottom: PreferredSize(
            preferredSize: Size.fromHeight(50),
            child: DefaultTabController(
              length: 3,
              child: TabBar(tabs: [
                Tab(
                  text: "IPHONE",
                ),
                Tab(
                  text: "MACBOOK",
                ),
                Tab(
                  text: "NEW PRODUCT",
                ),
              ]),
            ),
          ),
        ),
      ),
    );
  }
}

//cara 2


import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  DefaultTabController myController = DefaultTabController(length: 4, child: Container());

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: DefaultTabController(
        length: 4,
        child: Scaffold(
          appBar: AppBar(
            title: Text("My App Slide"),
            centerTitle: true,
            bottom: TabBar(tabs: [
                  Tab( //dalam tab mesti ada benda, kalau kosong akan error
                    text: "IPHONE",
                    icon: Icon(Icons.add_a_photo),
                  ),
                  Tab(
                    icon: Icon(Icons.ac_unit_outlined),
                  ),
                  Tab(
                    text: "NEW PRODUCT",
                  ),
                  Tab(
                    child: Container(child: Image.asset("images/macbook.jpg")),
                  ),
                ]),
              ),
            ),
      ),
        );
  }
}

// cara 3


import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  List<Tab> myTab = [
Tab( //dalam tab mesti ada benda, kalau kosong akan error
                    text: "IPHONE",
                    icon: Icon(Icons.add_a_photo),
                  ),
                  Tab(
                    icon: Icon(Icons.ac_unit_outlined),
                  ),
                  Tab(
                    text: "NEW PRODUCT",
                  ),
                  Tab(
                    child: Container(child: Image.asset("images/macbook.jpg")),
                  ),
  ];
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: DefaultTabController(
        length: 4,
        child: Scaffold(
          appBar: AppBar(
            title: Text("My App Slide"),
            centerTitle: true,
            bottom: TabBar(
              tabs: myTab,
              //indicatorColor: Colors.black,
              //indicatorPadding: EdgeInsets.all(5),
              //indicatorWeight: 5,  // cara 1

              indicator: BoxDecoration(
                color: Colors.red,
                
                border: Border(
                  bottom: BorderSide(
                  color: Colors.black,
                  width: 5,   // cara 2, tidak boleh guna selain indicator sahaja
                ),
                ),
              ),
              ),
              ),
            ),
      ),
        );
  }
}


  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  List<Tab> myTab = [
Tab( //dalam tab mesti ada benda, kalau kosong akan error
                    text: "IPHONE",
                    icon: Icon(Icons.add_a_photo),
                  ),
                  Tab(
                    icon: Icon(Icons.ac_unit_outlined),
                  ),
                  Tab(
                    text: "NEW PRODUCT",
                  ),
                  
  ];
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: DefaultTabController(
        length: 3,
        child: Scaffold(
          appBar: AppBar(
            title: Text("My App Slide"),
            centerTitle: true,
            bottom: TabBar(
              labelColor: Colors.black, //semua berubah color
              unselectedLabelColor: Colors.white,  //tidak select akan jadi warna nihhs
              labelStyle: TextStyle(fontWeight: FontWeight.bold),
              unselectedLabelStyle: TextStyle(
                fontWeight: null,
              ),
              tabs: myTab,
              // indicatorColor: Colors.black,
              // indicatorPadding: EdgeInsets.all(5),
              // indicatorWeight: 5,
              indicator: BoxDecoration(
                color: Colors.white,
                
                border: Border(
                  bottom: BorderSide(
                  color: Colors.black,
                  width: 5,
                ),
                ),
              ),
              ),
              ),
            ),
      ),
        );
  }
}

//cara 5

import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  List<Tab> myTab = [
Tab( //dalam tab mesti ada benda, kalau kosong akan error
                    text: "IPHONE",
                    icon: Icon(Icons.add_a_photo),
                  ),
                  Tab(
                    icon: Icon(Icons.ac_unit_outlined),
                  ),
                  Tab(
                    text: "NEW PRODUCT",
                  ),
                  
  ];
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: DefaultTabController(
initialIndex: 2,
        length: 3,
        child: Scaffold(
          appBar: AppBar(
            title: Text("My App Slide"),
            centerTitle: true,
            bottom: TabBar(
              labelColor: Colors.black, //semua berubah color
              unselectedLabelColor: Colors.white,  //tidak select akan jadi warna nihhs
              labelStyle: TextStyle(fontWeight: FontWeight.bold),
              unselectedLabelStyle: TextStyle(
                fontWeight: null,
              ),
              tabs: myTab,
              // indicatorColor: Colors.black,
              // indicatorPadding: EdgeInsets.all(5),
              // indicatorWeight: 5,
              indicator: BoxDecoration(
                color: Colors.white,
                
                border: Border(
                  bottom: BorderSide(
                  color: Colors.black,
                  width: 5,
                ),
                ),
              ),
              ),
              ),
              body: TabBarView(
                children: [
                  Center(
                    child: Text(
                    "IPHONE",
                    style: TextStyle(
                      fontSize: 28,
                    ),),
                  ),
                  Center(
                    child: Text(
                    "MACBOOK",
                    style: TextStyle(
                      fontSize: 28,
                    ),),
                  ),
                  Center(
                    child: Text(
                    "NEW PRODUCT",
                    style: TextStyle(
                      fontSize: 28,
                    ),),
                  ),
                  Center(
                    child: Text(
                    "NEW PRODUCT",
                    style: TextStyle(
                      fontSize: 28,
                    ),),
                  ),
              ]),
            ),
      ),
        );
  }
}



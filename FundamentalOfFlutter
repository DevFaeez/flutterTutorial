7. Image Widget

* Format yg support: JPEG, PNG, GIF, WebP, BMP,WBMP
* Jenis Provider Image: Asset, Network, File, Memory
* Kecepatan Provider: cepat > lambat
                    : Memory > Asset > File > Network

//cara 1

import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      home: Scaffold(
        appBar: AppBar(
          title: Text("MY CHAT"),
        ),
        body: Center(
          child: Container(
            width: 350,
            height: 500,
            color: Colors.amber,
            child: Image(
              //fit: BoxFit.contain,
              // fit: BoxFit.fill,
              fit: BoxFit.cover,
              image: AssetImage("images/macbook.jpg"), //source asset
              // image: NetworkImage("https://media.istockphoto.com/id/1432800146/photo/people-putting-the-jigsaws-team-together-charity-volunteer-unity-team-business-concept-of.jpg?s=2048x2048&w=is&k=20&c=y0JUKDpTNXKT3xYq5FWMH-8SBEDcLkg698lL7ovQJa8="), //source: network
            ),
          ),
        ),
      ),
    );
  }
}



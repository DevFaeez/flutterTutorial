16. Control Text Field

//cara 1: using statelesswidget

import 'package:flutter/material.dart';

void main() {

runApp(MyApp());
}

class MyApp extends StatelessWidget {
  String result = "INPUT RESULT";
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        appBar: AppBar(
          centerTitle: true,
          title: Container(
            child: Text("Control Text Field",
            style: TextStyle(
              fontSize: 25,
            ),
            ),
          ),
        ),
        body: Center(
          child: Padding(
            padding: const EdgeInsets.all(25.0),
            child: Column(
              mainAxisAlignment: MainAxisAlignment.center,
              children: [
                TextField(
                  controller: TextEditingController(text: "+60"),
                  onChanged: (value) {
                    print("ONCHANGE");
                    result = value;
                  },
                  onSubmitted: (value) => print(value),
                  onEditingComplete: () => print("COMPLETE EDITING"),
                  // onTap: (value) => print(value),
                ),

                Text(result),
              ],
            ),
          ),
        ),
      ),
    );
  }
}

//cara 2: using statefulllwidget

import 'package:flutter/material.dart';

void main() {

runApp(MyApp());
}

class MyApp extends StatefulWidget {
  @override
  State<MyApp> createState() => _MyAppState();
}

class _MyAppState extends State<MyApp> {
  String result = "INPUT RESULT";

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        appBar: AppBar(
          centerTitle: true,
          title: Container(
            child: Text("Control Text Field",
            style: TextStyle(
              fontSize: 25,
            ),
            ),
          ),
        ),
        body: Center(
          child: Padding(
            padding: const EdgeInsets.all(25.0),
            child: Column(
              mainAxisAlignment: MainAxisAlignment.center,
              children: [
                TextField(
                  // controller: TextEditingController(text: "+60"),
                  onChanged: (value) {
                    print("ONCHANGE");
                    setState(() {
                      result = value;
                    });
                    },
                  onSubmitted: (value) {
                    setState(() {
                      result = "FINAL: $value";
                      
                    });
                  },
                  onEditingComplete: () => print("COMPLETE EDITING"),
                  // onTap: (value) => print(value),
                ),

                Text(result),
              ],
            ),
          ),
        ),
      ),
    );
  }
}


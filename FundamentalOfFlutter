18. Dialog

import 'package:flutter/material.dart';

class MyHomePage extends StatefulWidget {


  @override
  State<MyHomePage> createState() => _MyHomePageState();
}

class _MyHomePageState extends State<MyHomePage> {
  String result = "Don't Have Input";

  @override
  Widget build(BuildContext context) {

    return Scaffold(
      appBar: AppBar(
        title: Text("Dialog"),
      ),
      body: Center(
        child: Text(
          result,
          style: TextStyle(fontSize: 25),
          ),
      ),
      floatingActionButton: FloatingActionButton(
        onPressed: () {
          print("Telah diklik");
          showDialog(
            context: context, 
            builder: (context) {
              return AlertDialog(
                actionsAlignment: MainAxisAlignment.center, //buat action center
                title: Text("CONFIRM"),
                content: Text("Are you sure want delete this item"),
                actions: [
                  ElevatedButton(
                    onPressed: () {
                      print("User click No");
                      setState(() {
                        result = "YOU CHOOSE NO";
                      });
                      Navigator.of(context).pop(false);  //untuk hilangakn dialog ini selepas kilik
                    },
                    child: Text("No"),
                    ),
                  ElevatedButton(
                    onPressed: () {
                      print("User click Yes");
                      setState(() {
                        result = "YOU CHOOSE YES";
                      });
                      Navigator.of(context).pop(true);
                    },                    
                    
                    child: Text("Yes"),
                    ),
                ],
              );
            }).then((value) {
              return print(value);
              });
        },
        child: Icon(Icons.delete, size: 30,),
        
        ),
        // floatingActionButtonLocation: FloatingActionButtonLocation.centerFloat, //set button tengah
        // floatingActionButtonLocation: FloatingActionButtonLocation.centerTop, //set atas tenga
        floatingActionButtonLocation: FloatingActionButtonLocation.miniCenterFloat,
    );
  }
}

//file main.dart

import 'dart:math';
import 'package:flutter/material.dart';
import 'home.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      home: MyHomePage(),
    );
  }

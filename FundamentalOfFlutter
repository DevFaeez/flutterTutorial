12. AppBar Widget

import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      home: Scaffold(
        appBar: AppBar(
          // leading: Text("MY LEADING"), //text akan terpotong
          leading: Container(
            color: Colors.green,
            // width: 100,
            // height: 100, //height dan width tidak akan terpengaruh
          ),
          leadingWidth: 100, //jadi perlu guna leadingWidth, dan leadingheight x wujud
          title: Container(
            color: Colors.red,
            //disini untuk title boleh gunakan height dan width
            height: 100,
            width: 200,
            child: Center(
              child: Text("Title Text"),
            ),
          ),
          titleSpacing: 0, //hilangkan space antara leading dan titile
          centerTitle: true,
          actions: [
            Container(
              //disini untuk action boleh gunakan height dan width
              color: Colors.black,
            // height: 100, //heigth tidak boleh diatur untuk action
            width: 100,
            ),
          ],
          bottom: PreferredSize(
            preferredSize: Size.fromHeight(150),
            child: Container(  //untuk buat prefirrend size kena refaktor this Container
                color: Colors.black,
                 width: 100,
                 height: 90,
              ),
          ),
          // flexibleSpace: Container(
          //     color: Colors.white,
          //     // width: 100, //width tidak mempegaruhi
          //     height: 100,
          //   ),
          // flexibleSpace: Center(child: Text("FLEXIBLE")),
        ),
      )
    );
  }
}


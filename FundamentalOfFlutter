15. Dekorasi Text Field

import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        appBar: AppBar(
          title: Text("Decoration of Text Field"),
        ),
        body: Center(
          child: Padding(
            padding: const EdgeInsets.all(40.0),
            child: TextField(
              // showCursor: true, //tunjukkan consol pada text field
              // cursorColor: Colors.brown,
              // cursorHeight: 25,
              // cursorWidth: 5,
              // cursorRadius: Radius.circular(15),
              obscureText: true,
              

              textAlign: TextAlign.center, //set position start maybe center start or end
              textAlignVertical: TextAlignVertical.center,//set text position(sedikit sahaa perubahan)
              textCapitalization: TextCapitalization.words, //setaip perkataan baru diawal li dengna capital latter
              // textCapitalization: TextCapitalization.characters,  //setiap char akan capital latter(boleh juka none, sentences dan sebagainya)

              style: TextStyle(  //untuk text dalam text filed
                color: Colors.blue,
                fontSize: 22,
              ),


              decoration: InputDecoration(
                fillColor: Colors.red,
                filled: true, //untuk guna color, field must set as true
                icon: Icon(
                  Icons.person_2,
                  size: 35,
                  ),

                border: OutlineInputBorder(
                  borderRadius: BorderRadius.all(Radius.circular(8)),
                  borderSide: BorderSide(color: Colors.black),
                ),

                focusedBorder: OutlineInputBorder(
                  borderSide: BorderSide(color: Colors.pink),
                ),

                // prefixIcon: Icon(  //untuk masukkan dalam boder, guna prefix
                //   Icons.person_add,

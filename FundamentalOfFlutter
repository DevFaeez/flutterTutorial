                // hintTextDirection: TextDirection.ltr, //maybe can rtl
                // alignLabelWithHint: ,

                labelText: "Full Name", //berada atas dalam border
                labelStyle: TextStyle(
                  color: Colors.amber,
                ),

                // alignLabelWithHint: false,






                ),

              

              // decoration: InputDecoration(
              // labelText: 'Outline Border',
              //   border: OutlineInputBorder(),

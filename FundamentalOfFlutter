5. List View
//cara 1


import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  @override
  Widget build(BuildContext context) {
    
      return MaterialApp(
        home: Scaffold(
          appBar: AppBar(
            title: Text("LIST"),
          ),
          body: ListView(  //kalau gunakan colloum untuk width and height 300px, 
                           // maka tidak bole scrool dan mungkin akan ada bahagian yang hilang
                           //jadi tidak boleh gunakan column, maka ListView berguna saat ini
            // scrollDirection: Axis.horizontal, : untuk horizontal scrool
            children: [
              Container(
                // child: Text("HELOO"),
                // style: TextStyle(
                //     fontSize: 24,
                // ),
                width: 300,
                height: 300,
                color: Colors.red,
              ),
              Container(
                width: 300,
                height: 300,
                color: Colors.green,
              ),
              Container(
                width: 300,
                height: 300,
                color: Colors.yellow,
              ),
              Container(
                width: 300,
                height: 300,
                color: Colors.amber,
              ),
            ],
          ),
        ),
      );



  }
}

//cara 2


import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  @override
  Widget build(BuildContext context) {

    List<Widget> myList = [
              Container(
                // child: Text("HELOO"),
                // style: TextStyle(
                //     fontSize: 24,
                // ),
                width: 300,
                height: 300,
                color: Colors.red,
              ),
              Container(
                width: 300,
                height: 300,
                color: Colors.green,
              ),
              Container(
                width: 300,
                height: 300,
                color: Colors.yellow,
              ),
              Container(
                width: 300,
                height: 300,
                color: Colors.amber,
              ),
            ];

      return MaterialApp(
        home: Scaffold(
          appBar: AppBar(
            title: Text("LIST"),
          ),
          body: ListView(  //kalau gunakan colloum untuk width and height 300px, 
                           // maka tidak bole scrool dan mungkin akan ada bahagian yang hilang
                           //jadi tidak boleh gunakan column, maka ListView berguna saat ini
            // scrollDirection: Axis.horizontal, : untuk horizontal scrool
            children: myList,
          ),
        ),
      );



  }
}


//cara 3: ListBuilder


import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  @override
  Widget build(BuildContext context) {
    
    List<Color> myColor = [Colors.black, Colors.green, Colors.yellow, Colors.pink,Colors.black, Colors.green, Colors.yellow, Colors.pink];

      return MaterialApp(
        home: Scaffold(
          appBar: AppBar(
            title: Text("LIST"),
          ),
          body: ListView.builder(
            itemCount: myColor.length,
            itemBuilder: (context, index) {
              return Container(
                height: 200,
                width: 300,
                color: myColor[index], 
              );
            },
          )
        ),
      );



  }
}

//cara 4 List separeted


import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  @override
  Widget build(BuildContext context) {
    
    List<Color> myColor = [Colors.black, Colors.green, Colors.yellow, Colors.pink];

      return MaterialApp(
        home: Scaffold(
          appBar: AppBar(
            title: Text("LIST"),
          ),
          body: ListView.separated(
            separatorBuilder: (context, index) {
              //cara
              // return Container(
              //   height: 50,
              //   color: Colors.grey,

              return Divider(
                color: Colors.grey,
              );
              
            },
            itemCount: myColor.length,
            itemBuilder: (context, index) {
              return Container(
                height: 200,
                width: 300,
                color: myColor[index], 
              );
            },
          )
        ),
      );



  }
}

//cara 5



import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  @override
  Widget build(BuildContext context) {
    
    List<Color> myColor = [Colors.black, Colors.green, Colors.yellow, Colors.pink];

      return MaterialApp(
        home: Scaffold(
          appBar: AppBar(
            title: Text("LIST"),
          ),
          body: ListView.separated(
            separatorBuilder: (context, index) {
              //cara
              // return Container(
              //   height: 50,
              //   color: Colors.grey,

              return Divider(
                color: Colors.grey,
              );
              
            },
            itemCount: myColor.length,
            itemBuilder: (context, index) {
              return Text("HELLLO");
              
            },
          )
        ),
      );



  }
}

//cara 6: print auto number


import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  @override
  Widget build(BuildContext context) {

    final List<Widget> myList = List.generate(
    100,
      (index) => Text(
      index.toString(),
      ),
    );
    
    final List<Color> myColor = [Colors.black, Colors.green, Colors.yellow, Colors.pink];

      return MaterialApp(
        home: Scaffold(
          appBar: AppBar(
            title: Text("LIST"),
          ),
          body: ListView(
            children: myList,
        ),
      ),
      );
  }
}

//cara 7


import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  @override
  Widget build(BuildContext context) {

    final List<Widget> myList = List.generate(
    100,
      (index) => Text(
      "${index + 1}",
      style: TextStyle(
        fontSize: 22 + double.parse(index.toString()),
      ),
      ),
    );
    
    final List<Color> myColor = [Colors.black, Colors.green, Colors.yellow, Colors.pink];

      return MaterialApp(
        home: Scaffold(
          appBar: AppBar(
            title: Text("LIST"),
          ),
          body: ListView(
            children: myList,
        ),
      ),
      );
  }
}

